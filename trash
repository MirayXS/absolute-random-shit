local Mouse = game.Players.LocalPlayer:GetMouse()

local Bind = function(Key, Toggle, Func)
    if Key == nil then
        print("No key provided.")
    end
    if Toggle == nil then
        print("Nil parameter for toggle, please provide true or false to indicate.")
    end
    if Toggle == true then
        local PlaceHoldTog = false
        Mouse.KeyDown:connect(
            function(K)
                if K == Key then
                    if PlaceHoldTog == false then
                        PlaceHoldTog = true
                    else
                        PlaceHoldTog = false
                    end
                end
            end
        )
    elseif Toggle == true then
        Mouse.KeyDown:connect(
            function(K)
                if K == Key then
                    pcall(Func)
                end
            end
        )
    end
end

Bind(
    "W",
    false,
    function()
        print("Work")
    end
)
